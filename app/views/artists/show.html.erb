<div class="container">
  <div class="row">

    <div class="col-md-3">
      <h1>
        <%= @artist.name %>
      </h1>
    </div>

    <div class="col-md-2">
      <p>
        <%= @artist.genre %>
      </p>
    </div>

  </div>
  <div class="row">
    <div class="col-md-6"
      <p>
        <%= @artist.description %>
      </p>
    </div>

    <div class="col-md-6 img-responsive thumbnail">
        <%= image_tag @artist.image %>
    </div>

  </div>
</div>

<div class="container">
  <h2><%= link_to "Songs:", artist_songs_path(@artist) %></h2>
</div>

<div class="container">

  <% @artist.songs.each do |song| %>
    <div class="row">

      <div class="col-md-3">
        <p>
          Title:
          <%= song.title %>
        </p>
      </div>

      <div class="col-md-3">
        <p>
          Length:
          <%= song.length %>
        </p>
      </div>

      <div class="col-md-3">
        <p>
          Year:
          <%= song.release_year %>
        </p>
      </div>

      <div class="col-md-3">
        <p>
          Album:
          <%= song.album %>
        </p>
      </div>

    </div>
  <% end %>

</div>
